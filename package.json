{
  "name": "app-horas-jlc",
  "version": "1.6.3",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "assert": "^2.1.0",
    "bcryptjs": "^3.0.2",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "lucide-react": "^0.503.0",
    "process": "^0.11.10",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "stream-browserify": "^3.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "predeploy": "npm run build && node update-version.js",
    "deploy": "gh-pages -d build",
    "start": "cross-env REACT_APP_VERSION=$npm_package_version craco start",
    "build": "cross-env REACT_APP_VERSION=$npm_package_version craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "release:major": "npm version major && npm run deploy",
    "release:minor": "npm version minor && npm run deploy",
    "release:patch": "npm version patch && npm run deploy",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "postversion": "npm run changelog && git add CHANGELOG.md package.json package-lock.json && git commit -m \"chore: release v$(node -p 'require(\"./package.json\").version')\" || echo \"Ignorando error de commit\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "conventional-changelog-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.3",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.5"
  },
  "homepage": "https://rodolfox22.github.io/App-horas-React",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "crypto": "crypto-browserify",
    "stream": "stream-browserify",
    "util": "util",
    "url": "url"
  }
}
